                <div class="portfolio-grid">
                    <% for(var i=0;i<data.portfolio.length;i++) { %>
                        <div class="grid-item new percent-33 <%= data.portfolio[i].label %>">
                            <div class="single-portfolio overlay light-1 text-center">
                                <img src="/assets/img/portfolio/<%= data.portfolio[i].image %>" alt="<%= data.portfolio[i].name %>" />
                                <div class="title plr-40 text-center">
                                    <div class="zoom-icon">
                                        <a href="<%= data.portfolio[i].url %>">
                                            <i class="zmdi zmdi-link"></i>
                                        </a>
                                    </div>
                                    <div class="project-title text-left">
                                        <h4 class="font-20 montserrat weight-regular capitalize no-margin"><%= data.portfolio[i].name %></h4>
                                        <p class="montserratlight"><%= data.portfolio[i].label %></p>
